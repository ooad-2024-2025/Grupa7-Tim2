@using System.Security.Claims
@model ETForum.Models.Korisnik
@{
    ViewData["Title"] = "Moj profil";
}

<!-- Custom CSS -->
<style>
    :root {
        --primary-color: #4a90e2;
        --secondary-color: #f4f4f4;
        --text-color: #333;
        --border-radius: 10px;
        --shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease-in-out;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: var(--text-color);
        margin: 0;
        padding: 0;
    }

    .profile-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        margin-left: auto;
        margin-right: auto;
        width: 90%;
    }

    .page-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 2.5rem;
        color: var(--primary-color);
        font-weight: 700;
    }

    .profile-card {
        background: #ffffff;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        display: flex;
        flex-direction: row;
        margin-bottom: 30px;
        padding-left: 50px;
    }

        .profile-card img {
            border-radius: var(--border-radius);
            max-width: 200px;
            object-fit: fill;
            margin-right: 20px;
        }

        .profile-card .profile-info {
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

    .profile-info {
        padding: 20px;
        padding-left: 70px; /* Dodaj ovu liniju */
        display: flex;
        flex-direction: column;
    }

        .profile-info table {
            width: 100%;
            border-collapse: collapse;
        }

        .profile-info th, .profile-info td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        .profile-info th {
            text-align: left;
            color: #777;
        }

        .profile-info td {
            color: #333;
        }

    .edit-btn {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: var(--primary-color);
        color: white;
        font-weight: 600;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        transition: var(--transition);
    }

        .edit-btn:hover {
            background-color: #357ab7;
        }

    .achievements-section {
        background: #fff;
        border-radius: var(--border-radius);
        padding: 20px;
        box-shadow: var(--shadow);
    }

        .achievements-section h3 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: var(--primary-color);
        }

    .achievements-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    .achievement-badge {
        background: #f9f9f9;
        padding: 20px;
        border-radius: var(--border-radius);
        text-align: center;
        box-shadow: var(--shadow);
        transition: var(--transition);
    }

        .achievement-badge:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        }

    .achievement-icon {
        font-size: 3rem;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .achievement-name {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .achievement-desc {
        color: #777;
        font-size: 1rem;
    }

</style>

<div class="profile-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">👤 Moj Profil</h1>
    </div>

    <!-- Profile Card -->
    <div class="profile-card">
        <div class="profile-image-container text-center " style=" padding-left : 50 px;">
            <img src="@Model.urlSlike" class="profile-image" alt="Profilna slika" />
        </div>
        <div class="profile-info" style="padding-left: 50px;">
            <h2>@Model.ime @Model.prezime</h2>
            <table>
                <tr><th>Ime:</th><td>@Model.ime</td></tr>
                <tr><th>Prezime:</th><td>@Model.prezime</td></tr>
                <tr><th>Nickname:</th><td>@Model.nickname</td></tr>
                <tr><th>Email:</th><td>@Model.Email</td></tr>
                <tr><th>Smjer:</th><td>@Model.smjer</td></tr>
            </table>
            @if (Model.Id == User.FindFirstValue(ClaimTypes.NameIdentifier))
            {
                <a asp-action="UrediProfil" class="btn btn-primary">Uredi moj profil</a>
            }
        </div>
    </div>

    <style>
        .profile-image-container {
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .profile-image {
            width: 180px;
            height: 180px;
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid var(--primary-color);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .profile-image:hover {
                transform: scale(1.05);
            }
    </style>


    <!-- Achievements Section -->
    <div class="achievements-section">
        <h3>🏆 Dostignuća</h3>
        <div class="achievements-list">
            @foreach (var d in Model.KorisnikDostignuca)
            {
                <div class="achievement-badge">
                    <div class="achievement-icon">
                        @if (d.Dostignuce.tip == TipDostignuca.Pitanje)
                        {
                            <i class="fas fa-question-circle"></i>
                        }
                        else if (d.Dostignuce.tip == TipDostignuca.Odgovor)
                        {
                            <i class="fas fa-reply"></i>
                        }
                        else if (d.Dostignuce.tip == TipDostignuca.Ostalo)
                        {
                            <i class="fas fa-trophy"></i>
                        }
                        else if (d.Dostignuce.tip == TipDostignuca.Lajk)
                        {
                            <i class="fas fa-thumbs-up"></i>
                        }
                        else if (d.Dostignuce.tip == TipDostignuca.Prijatelj)
                        {
                            <i class="fas fa-user-friends"></i>
                        }
                    </div>
                    <div class="achievement-name">@d.Dostignuce.naziv</div>
                    <div class="achievement-desc">@d.Dostignuce.opis</div>
                </div>
            }

        </div>
        <!-- Friends List Section -->
        <div class="achievements-section mt-4">
            <h3>👥 Prijatelji</h3>
            @if (ViewBag.Prijatelji != null && ((List<ETForum.Models.Korisnik>)ViewBag.Prijatelji).Any())
            {
                <div class="achievements-list">
                    @foreach (var prijatelj in (List<ETForum.Models.Korisnik>)ViewBag.Prijatelji)
                    {
                        <div class="achievement-badge">
                            <div class="achievement-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="achievement-name">@prijatelj.nickname</div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Nemaš prijatelja trenutno.</p>
            }
        </div>
    </div>
</div>