@model IEnumerable<ETForum.Models.Smjer>
@{
    ViewData["Title"] = "Izaberi smjer";
}

<style>
    .smjer-lista {
        list-style: none;
        padding: 0;
        margin-top: 30px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .smjer-item {
        margin-bottom: 18px;
        border-radius: 18px;
        background: linear-gradient(90deg, #6dd5ed 0%, #2193b0 100%);
        box-shadow: 0 2px 8px rgba(33,147,176,0.12);
        transition: box-shadow 0.3s, transform 0.3s;
    }

        .smjer-item:hover {
            box-shadow: 0 4px 16px rgba(33,147,176,0.28);
            transform: translateY(-2px) scale(1.03);
        }

    .smjer-link {
        display: block;
        color: #fff;
        padding: 18px 24px;
        font-size: 1.2em;
        font-weight: 600;
        border-radius: 18px;
        text-decoration: none;
        transition: background 0.2s, color 0.2s;
    }

        .smjer-link:hover {
            color: #f9d423;
            background: rgba(33, 147, 176, 0.15);
            text-decoration: none;
        }

    h2 {
        text-align: center;
        color: #2193b0;
        margin-top: 32px;
        letter-spacing: 1px;
        font-weight: 700;
    }
</style>

<h2>Izaberi smjer</h2>
<ul class="smjer-lista">
    @foreach (var smjer in Model)
    {
        <li class="smjer-item">
            <a class="smjer-link" href="@Url.Action("PredmetiZaSmjer", new { smjer = smjer })">@smjer</a>
        </li>
    }
</ul>
