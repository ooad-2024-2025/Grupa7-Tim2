@{
    ViewData["Title"] = "Ocijeni predmet";
    int predmetId = ViewBag.PredmetId ?? 0;
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 mb-5" style="max-width: 500px; margin: auto;">
        <h3 class="mb-4 text-primary"><i class="fas fa-star"></i> Ocijeni predmet</h3>
        <form asp-action="Ocijeni" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="predmetId" value="@predmetId" />

            <div class="mb-3">
                <label for="ocjena" class="form-label fw-bold">Ocjena <span class="text-danger">*</span></label>
                <select class="form-select" id="ocjena" name="ocjena" required>
                    <option value="">-- Odaberi ocjenu --</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="komentar" class="form-label">Komentar</label>
                <textarea id="komentar" name="komentar" maxlength="500"
                          class="form-control" rows="4" placeholder="Dodajte komentar (opcionalno)..."></textarea>
                <div class="form-text">Maksimalno 500 znakova.</div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-paper-plane"></i> Pošalji
                </button>
            </div>
        </form>
    </div>

    <div class="text-center">
        <a href="@Url.Action("DetaljiPredmeta", new { predmetId = predmetId })" class="btn btn-link mt-2">
            &larr; Nazad na predmet
        </a>
    </div>
</div>

<style>
    .card {
        border-radius: 16px;
        border: none;
        background: #f8f9fa;
    }

    .btn-success {
        border-radius: 9px;
        font-weight: 600;
    }

    .btn-link {
        text-decoration: none;
        color: #3498db;
        font-weight: 500;
        transition: color 0.2s;
    }

        .btn-link:hover {
            color: #217dbb;
            text-decoration: underline;
        }

    textarea.form-control {
        resize: vertical;
    }
</style>
