@{
    ViewData["Title"] = "Ocijeni predmet";
}

<style>
    .ocijeni-form-wrapper {
        max-width: 410px;
        margin: 40px auto 0 auto;
        padding: 28px 28px 22px 28px;
        border-radius: 22px;
        background: linear-gradient(120deg, #e0eafc 0%, #cfdef3 100%);
        box-shadow: 0 2px 18px rgba(33,147,176,0.09);
    }

    .ocijeni-form label {
        font-weight: 600;
        color: #2193b0;
        margin-top: 8px;
        display: block;
        margin-bottom: 6px;
        letter-spacing: 0.5px;
    }

    .ocijeni-form select,
    .ocijeni-form textarea {
        border-radius: 10px;
        border: 1px solid #b4d7ed;
        padding: 7px 10px;
        font-size: 1em;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.2s, box-shadow 0.2s;
        margin-bottom: 18px;
        background: #fff;
    }

        .ocijeni-form select:focus,
        .ocijeni-form textarea:focus {
            outline: none;
            border-color: #2193b0;
            box-shadow: 0 0 6px #2193b055;
        }

    .ocijeni-form textarea {
        min-height: 80px;
        resize: vertical;
    }

    .ocijeni-form .btn-success {
        background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%);
        border: none;
        color: #fff;
        padding: 10px 36px;
        border-radius: 18px;
        font-weight: 700;
        font-size: 1.1em;
        transition: background 0.16s, box-shadow 0.18s;
        box-shadow: 0 2px 8px rgba(67,206,162,0.10);
    }

        .ocijeni-form .btn-success:hover {
            background: linear-gradient(90deg, #185a9d 0%, #43cea2 100%);
            color: #2193b0;
            box-shadow: 0 4px 16px rgba(67,206,162,0.18);
        }

    .nazad-dugme {
        display: block;
        margin: 28px auto 0 auto;
        padding: 6px 18px;
        background: linear-gradient(90deg, #6dd5ed 0%, #2193b0 100%);
        color: #fff !important;
        border: none;
        border-radius: 16px;
        font-size: 1em;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(33,147,176,0.10);
        text-align: center;
        text-decoration: none;
        transition: background 0.18s, box-shadow 0.18s, color 0.2s;
        min-width: 80px;
        width: fit-content;
    }

        .nazad-dugme:hover {
            background: linear-gradient(90deg, #2193b0 0%, #6dd5ed 100%);
            color: #2193b0 !important;
            box-shadow: 0 4px 14px rgba(33,147,176,0.17);
            text-decoration: none;
        }

    h2 {
        text-align: center;
        color: #2193b0;
        margin-top: 32px;
        margin-bottom: 10px;
        font-weight: 700;
        letter-spacing: 1px;
    }
</style>

<h2>Ocijeni predmet: @ViewBag.NazivPredmeta</h2>

<div class="ocijeni-form-wrapper">
    <form asp-action="Ocijeni" method="post" class="ocijeni-form">
        <input type="hidden" name="predmetId" value="@ViewBag.PredmetId" />

        <label for="ocjena">Ocjena (1-5):</label>
        <select id="ocjena" name="ocjena" required>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>

        <label for="komentar">Komentar:</label>
        <textarea id="komentar" name="komentar" maxlength="500" placeholder="Dodajte komentar (opcionalno)..."></textarea>

        <button type="submit" class="btn btn-success">Pošalji</button>
    </form>
</div>

<a href="@Url.Action("DetaljiPredmeta", new { predmetId = ViewBag.PredmetId })" class="nazad-dugme">Nazad na predmet</a>

