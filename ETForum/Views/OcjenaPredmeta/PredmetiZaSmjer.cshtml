@model IEnumerable<ETForum.Models.Predmeti>
@{
    ViewData["Title"] = "Predmeti";
}

<style>
    .predmeti-lista {
        list-style: none;
        padding: 0;
        margin-top: 28px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .predmet-item {
        margin-bottom: 16px;
        border-radius: 16px;
        background: linear-gradient(90deg, #e0eafc 0%, #6dd5ed 100%);
        box-shadow: 0 2px 8px rgba(255, 215, 0, 0.13);
        transition: box-shadow 0.2s, transform 0.2s;
    }

        .predmet-item:hover {
            box-shadow: 0 4px 16px rgba(255, 215, 0, 0.24);
            transform: translateY(-2px) scale(1.03);
        }

    .predmet-link {
        display: block;
        color: #2193b0;
        padding: 16px 22px;
        font-size: 1.16em;
        font-weight: 600;
        border-radius: 16px;
        text-decoration: none;
        transition: background 0.2s, color 0.2s;
    }

        .predmet-link:hover {
            color: #fff;
            background: rgba(247, 151, 30, 0.22);
            text-decoration: none;
        }

    h2 {
        text-align: center;
        color: #2193b0;
        margin-top: 30px;
        letter-spacing: 1px;
        font-weight: 700;
    }

    .nazad-dugme {
        display: block;
        margin: 24px auto 0 auto;
        padding: 6px 18px;
        background: linear-gradient(90deg, #6dd5ed 0%, #2193b0 100%);
        color: #fff !important;
        border: none;
        border-radius: 16px;
        font-size: 1em;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(33,147,176,0.10);
        text-align: center;
        text-decoration: none;
        transition: background 0.18s, box-shadow 0.18s, color 0.2s;
        min-width: 80px;
        width: fit-content;
    }

        .nazad-dugme:hover {
            background: linear-gradient(90deg, #2193b0 0%, #6dd5ed 100%);
            color: #2193b0 !important;
            box-shadow: 0 4px 14px rgba(33,147,176,0.17);
            text-decoration: none;
        }
</style>

<h2>Predmeti na smjeru @ViewBag.Smjer</h2>
<ul class="predmeti-lista">
    @foreach (var predmet in Model)
    {
        <li class="predmet-item">
            <a class="predmet-link" href="@Url.Action("DetaljiPredmeta", new { predmetId = predmet.id })">
                @predmet.naziv
            </a>
        </li>
    }
</ul>

<a href="@Url.Action("Smjer")" class="nazad-dugme">Nazad na izbor smjera</a>

