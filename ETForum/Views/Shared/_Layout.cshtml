<!DOCTYPE html>
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETForum</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETForum.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Naslovna">ETForum</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Search button section -->
                    @if (controller == "Home" && action == "Naslovna" && User.Identity.IsAuthenticated)
                    {
                        <div class="position-absolute start-50 translate-middle-x">
                            <form asp-controller="Korisnik" asp-action="PretragaKorisnika" method="get" role="search">
                                <button class="btn btn-gradient btn-lg rounded-pill px-4" type="submit"
                                        style="background: linear-gradient(45deg, #1abc9c, #16a085); color: white; box-shadow: 0 4px 10px rgba(22, 160, 133, 0.6); transition: transform 0.2s ease;">
                                    <i class="fas fa-search me-2"></i> Pronađi prijatelje
                                </button>
                            </form>
                        </div>
                    }

                    <!-- Main navigation menu -->
                    @if (!(controller == "Korisnik" && action == "Login") && !(controller == "Home" && action == "Naslovna"))
                    {
                        <ul class="navbar-nav ms-5 me-auto d-flex gap-3 align-items-center">
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold text-uppercase custom-nav-link" asp-controller="Home" asp-action="QnA">QnA</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold text-uppercase custom-nav-link" asp-controller="Home" asp-action="StudyRoom">Study Room</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold text-uppercase custom-nav-link" asp-controller="Home" asp-action="LiveChat">Live Chat</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold text-uppercase custom-nav-link" asp-controller="Dostignuce" asp-action="Leaderboard">Dostignuća</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold text-uppercase custom-nav-link" asp-controller="OcjenaPredmeta" asp-action="Smjer">Ocjena Predmeta</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fw-semibold text-uppercase custom-nav-link" asp-controller="Korisnik" asp-action="MojProfil">Moj Profil</a>
                                </li>
                            }
                        </ul>
                    }

                    <!-- Right side section - Friends and Logout -->
                    @if (controller == "Home" && action == "Naslovna" && User.Identity.IsAuthenticated)
                    {
                        <div class="ms-auto d-flex align-items-center gap-3">
                            <!-- Friends section -->
                            <a class="nav-link position-relative" asp-controller="Prijateljstvo" asp-action="ListaPrijatelja" title="Moji prijatelji">
                                <i class="bi bi-people-fill fs-4 text-primary"></i>
                                <span class="visually-hidden">Moji prijatelji</span>
                            </a>
                            <a class="nav-link position-relative" asp-controller="Prijateljstvo" asp-action="PrimljeniZahtjevi" title="Zahtjevi za prijateljstvo">
                                <i class="bi bi-person-plus-fill fs-4 text-success"></i>
                                <span class="visually-hidden">Zahtjevi za prijateljstvo</span>
                            </a>
                            <!-- Logout -->
                            <form asp-controller="Korisnik" asp-action="Logout" method="post" class="d-inline" id="LogoutForm">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="nav-link btn btn-link text-danger fw-semibold">
                                    <i class="bi bi-box-arrow-right me-1"></i>Odjavi se
                                </button>
                            </form>
                        </div>
                    }

                    <!-- Logout/Login section for other pages -->
                    @if (!(controller == "Korisnik" && action == "Login") && !(controller == "Home" && action == "Naslovna"))
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-controller="Korisnik" asp-action="Logout" method="post" class="d-inline" id="LogoutForm">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="nav-link btn btn-link text-danger fw-semibold">
                                            <i class="bi bi-box-arrow-right me-1"></i>Odjavi se
                                        </button>
                                    </form>
                                }
                                @if (!(User.Identity.IsAuthenticated))
                                {
                                    <form asp-controller="Korisnik" asp-action="Login" method="post" style="display:inline;" id="Login">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="nav-link btn btn-link text-primary fw-semibold">
                                            <i class="bi bi-box-arrow-in-right me-1"></i>Prijavi se
                                        </button>
                                    </form>
                                }
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ETForum
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .btn-gradient:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 14px rgba(22, 160, 133, 0.8);
            color: white;
        }

        .nav-link i {
            transition: transform 0.2s ease;
        }

        .nav-link:hover i {
            transform: scale(1.1);
        }

        /* Custom navigation link styling */
        .custom-nav-link {
            position: relative;
            text-decoration: none !important;
            transition: color 0.3s ease;
        }

            .custom-nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -2px;
                left: 50%;
                background: linear-gradient(45deg, #1abc9c, #16a085);
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .custom-nav-link:hover::after {
                width: 100%;
            }

            .custom-nav-link:hover {
                color: #1abc9c !important;
                text-decoration: none !important;
            }
    </style>
</body>
</html>