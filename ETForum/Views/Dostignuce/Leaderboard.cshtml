@model IEnumerable<dynamic>

<style>
    table {
        border-collapse: collapse;
        width: 90%;
        margin: 20px auto;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px 16px;
        text-align: center;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #fafafa;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Rang</th>
            <th>Korisnik</th>
            <th>Lajkova</th>
            <th>Komentara</th>
            <th>Pitanja</th>
            <th>Odgovora</th>
            <th>Najboljih odgovora</th>
            <th>Prijatelja</th>
        </tr>
    </thead>
    <tbody>
        @{
            int rang = 1;
            foreach (var x in Model)
            {
                <tr>
                    <td>@rang</td>
                    <td>@x.Korisnik.nickname </td>
                    <td>@x.BrojLajkova</td>
                    <td>@x.BrojKomentara</td>
                    <td>@x.BrojPitanja</td>
                    <td>@x.BrojOdgovora</td>
                    <td>@x.BrojNajboljihOdgovora</td>
                    <td>@x.BrojPrijatelja</td>
                </tr>
                rang++;
            }
        }
    </tbody>
</table>

